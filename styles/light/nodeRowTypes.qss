QComboBox {
    border-radius: 3px;
    border: none;
    padding-left: 5px;
    color: black;
    font-weight: bold;
}

QComboBox::drop-down {
    background-color: transparent;
    padding-right: 6px;
}

QComboBox:hover {
    border: 1px solid black;
}

QComboBox::on {
    color: black;
}

QComboBox::!on {
    color: black;
}