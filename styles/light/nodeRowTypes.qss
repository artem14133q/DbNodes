QComboBox {
    border-radius: 3px;
    border: none;
    padding-left: 5px;
    color: #2ba2df;
    font: bold;
}
QComboBox::drop-down {
    background-color: transparent;
    padding-right: 6px;
}
QComboBox:hover {
    border: 1px solid #efefef;
    border-radius: 3px;
}
QComboBox::on {
    color: #2ba2df;
}
QComboBox::!on {
    color: #efefef;
}